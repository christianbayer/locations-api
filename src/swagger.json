  "host": "localhost:4000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/countries": {
      "get": {
        "description": "List of all countries in the world",
        "responses": {
          "200": {
            "description": "List of countries",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Brazil"
                  },
                  "code_iso3": {
                    "type": "string",
                    "example": "BRA"
                  },
                  "code_iso2": {
                    "type": "string",
                    "example": "BR"
                  },
                  "continent": {
                    "type": "string",
                    "example": "SA"
                  },
                  "currency": {
                    "type": "string",
                    "example": "BRL"
                  },
                  "unicode": {
                    "type": "string",
                    "example": "ðŸ‡§ðŸ‡·"
                  },
                  "latitude": {
                    "type": "number",
                    "example": -10
                  },
                  "longitude": {
                    "type": "number",
                    "example": -55
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/countries/{countryCode}/states": {
      "get": {
        "description": "List of all states of the given country",
        "parameters": [
          {
            "name": "countryCode",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ISO2 Country Code",
            "schema": {
              "type": "string",
              "example": "BR"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of states",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Rio Grande do Sul"
                  },
                  "code": {
                    "type": "string",
                    "example": "RS"
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Not found",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Country not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/countries/{countryCode}/states/{stateCode}/cities": {
      "get": {
        "description": "List of all cities of the given state",
        "parameters": [
          {
            "name": "countryCode",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ISO2 Country Code",
            "schema": {
              "type": "string",
              "example": "BR"
            }
          },
          {
            "name": "stateCode",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "State Code",
            "schema": {
              "type": "string",
              "example": "RS"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of cities",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Lajeado"
                  },
                  "latitude": {
                    "type": "string",
                    "example": "-29.46694000"
                  },
                  "longitude": {
                    "type": "string",
                    "example": "-51.96139000"
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Not found",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "State not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    }
  }
